<%include partials/header%>

<div class="container">
    <h1 style="text-align: center">Create a new Campground</h1>
    <form method="POST" action="/campground">
        <div style="width:30%; margin:20px auto">
            <div class="form-group">
                <input class="form-control" type="text" name = "name" placeholder="Campground name"></input>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name = "image" placeholder="Image"></input>
            </div>            
            <div class="form-group">
                <input class="form-control" type="text" name = "description" placeholder="Description"></input>
            </div>
            <div class="form-group">
             <button class="btn btn-lg btn-primary">Submit</button>   
            </div>
            <a href="/campground">Go Back</a>
        </div>
    </form>

</div>
<%include partials/footer%>