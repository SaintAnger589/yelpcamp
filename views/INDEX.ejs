<% include partials/header %>

<div class="container">
    <header class="jumbotron">
            <h1>This is Campgrounds Page</h1>
            <p>
                <a class="btn btn-primary btn-large" href="/campground/new">Add New Campgrounds</a>    
            </p>            

        
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <div class="caption">
                        <h4><%= campground.name %></h4>    
                    </div>
                        <img src="<%=campground.image %>"></img>
                    </div>
                    <p>
                        <a class="btn btn-primary" href="/campground/<%= campground._id%>">More Info</a>    
                    </p>
            </div>
        <% }); %>
    
    </div>
</div>
<% include partials/footer %>